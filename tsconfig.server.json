{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./server",
    "rootDir": "./server",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": false,
    "typeRoots": ["./node_modules/@types", "./server"]
  },
  "include": [
    "server/**/*",
    "server/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src",
    "dist"
  ]
} 